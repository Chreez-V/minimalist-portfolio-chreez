
---
	import Section from "@/components/Section.astro"

import HTML from "@/icons/HTML.astro"
import CSS from "@/icons/CSS.astro"
import Figma from "@/icons/Figma.astro"
import C_Cpp from "@/icons/C_Cpp.astro"
import Java from "@/icons/Java.astro"
import Git from "@/icons/Git.astro"
import UNIX_Linux from "@/icons/UnixLinux.astro"
import Tailwind from "@/icons/Tailwind.astro"
import Astro_FW from "@/icons/Astro.astro"
import Javascript from "@/icons/Javascript.astro"
import Typescript from "@/icons/Typescript.astro"
import ReactJS from "@/icons/ReactJS.astro"
import PostgreSQL from "@/icons/PostgreSQL.astro"

	import { skills } from "@cv"
	
	const SKILLS_ICONS: Record<string, any> = {
		HTML,
		CSS,
		Figma,
		C_Cpp,
		Java,
		Git,
	  UNIX_Linux,
	  Astro_FW,
		Tailwind,
		Javascript,
		Typescript,
		ReactJS,
		PostgreSQL

		
	}
---
<Section title="Habilidades">
  <ul>
    {
      skills.map(({name}) => {

	const IconName = name === "Next.js" ? "Next" : name
	const Icon = SKILLS_ICONS[IconName]

		return(
		<li>
		{Icon &&  <Icon/>}   <span>{name}</span>
		</li>
		)
		})
	}
  </ul>
</Section>

<style>


  ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
  }

  li {
	align-items: center;
    background: #eee;
    border-radius: 6px;
    color: black;
    display: flex;
    font-size: 0.8rem;
	font-weight: 500;
	gap: 4px;
    padding: 0.2rem 0.6rem;
  }
</style>
